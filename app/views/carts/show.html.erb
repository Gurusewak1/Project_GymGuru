<h1>Your Shopping Cart</h1>

<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% total_price = 0 %>
      <% @cart.each do |product_id, quantity| %>
        <% product = Product.find(product_id) %>
        <tr>
          <td><%= product.name %></td>
          <td>
            <%= form_with url: update_cart_path(product_id), local: true, method: :patch do |f| %>
              <%= f.number_field :quantity, value: quantity, min: 1 %>
              <%= f.submit "Update" %>
            <% end %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * quantity) %></td>
          <td>
            <%= link_to 'Remove', remove_from_cart_path(product_id), method: :delete %>
          </td>
        </tr>
        <% total_price += product.price * quantity %>
      <% end %>
    </tbody>
  </table>

  <p>Total: <%= number_to_currency(total_price) %></p>
<% end %>
