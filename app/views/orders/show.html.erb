<div class="order-details-container">
  <h1 class="order-title">Order Details</h1>

  <div class="order-info">
    <p><strong>Order ID:</strong> <%= @order.id %></p>
    <p><strong>Customer:</strong> <%= @order.user.name %></p>
    <p><strong>Email:</strong> <%= @order.user.email %></p>
    <p><strong>Address:</strong> <%= @order.address %></p>
    <p><strong>Province:</strong> <%= @order.province.name %></p>
    <p><strong>Status:</strong> <%= @order.status.capitalize %></p>
    <% if @order.stripe_payment_intent_id %>
      <p><strong>Payment ID:</strong> <%= @order.stripe_payment_intent_id %></p>
    <% end %>
  </div>

  <h2 class="order-items-title">Order Items</h2>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Product</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3 class="total-amount">Total Amount: <%= number_to_currency(@order.total) %></h3>
</div>


<style>
  .order-details-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #f9f9f9;
  }

  .order-title {
    text-align: center;
    margin-bottom: 20px;
    font-size: 2em;
    color: #333;
  }

  .order-info p {
    margin: 5px 0;
  }

  .order-info strong {
    color: #555;
  }

  .order-items-title {
    margin-top: 20px;
    font-size: 1.5em;
    color: #333;
  }

  .table {
    width: 100%;
    margin-top: 10px;
    border-collapse: collapse;
  }

  .table th, .table td {
    padding: 10px;
    text-align: left;
    border: 1px solid #ddd;
  }

  .table th {
    background-color: #f2f2f2;
  }

  .thead-dark th {
    background-color: #343a40;
    color: white;
  }

  .total-amount {
    text-align: right;
    margin-top: 20px;
    font-size: 1.5em;
    color: #333;
  }
</style>
